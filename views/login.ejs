<html>
    <head>
        <meta charset="UTF-8">
        <title>Home</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <link rel="stylesheet" href="static/css/login.css">
    </head>
    <body>
        <section class="header">
            <h1 class="logo">CHATUP</h1>
            <div class="btns">
                <a href="#new-room">Create new room</a>
                <a href="#join-room">Join room</a>
            </div>
        </section>
        <div id="join-room">
            <form action="/join" method="GET" id="join">
                <h1>Join Room</h1>
                <input type="name" name="name" id="name" placeholder="Username" required>
                <input type="text" name="room" id="room" placeholder="Room Name." required>
                <input type="password" name="pass" id="pass" placeholder="Room Password" required>
                <button type="submit">Join</button>
            </form>
        </div>
        <div id="new-room">
            <form action="/room" method="post" id="new-room-create">
                <h1>Create New Room</h1>
                <input type="name" name="name" id="name" placeholder="Username" required>
                <input type="text" name="room" id="room" placeholder="Room Name." required>
                <input type="password" name="pass" id="pass" placeholder="Room Password" required>
                <button type="submit">Create</button>
            </form>
        </div>
    </body>
</html>